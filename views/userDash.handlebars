{{#each results}}

<div class="container">
	<div class="row d-flex justify-content-center">
		<div class="col-md-10 mt-5 pt-5">
			<div class="row z-depth-3">
				<div class="col-sm-4 bg-info rounded-left">
					<div class="card-block text-center text-white">
						{{#if this.img}}
						<img class="fas fa-7x mt-5" src="upload/{{this.img}}" style="max-width: 223px; border-radius:31px;">
						{{else}}
						<i class="fas fa-user-tie fa-7x mt-5"></i>
						{{/if}}
						<h2 class="font-weight-bold mt-4">{{this.username}}</h2>
						<p>Student</p><i class="far fa-edit fa-2x mb-4"></i>
					</div>
					<form action="/image" method="POST" encType="multipart/form-data">
						<h3>Upload Profile Photo</h3>
						<input type="file" name="sampleFile" accept="image/*" />
						<input type="submit" class="btn btn-primary">
					</form>
				</div>
				<div class="col-sm-8 bg-white rounded-right">
					<h3 class="mt-3 text-center">Account details</h3>
					<hr class="bg-primary mt-0 w-25">
					<div class="row">
						<div class="col-sm-6">
							<p class="font-weight-bold">Name:</p>
							<h6 class=" text-muted">{{this.fname}} {{this.lname}}</h6>
						</div>
						<div class="col-sm-6">
							<p class="font-weight-bold">Roll Number:</p>
							<h6 class="text-muted">{{this.roll_no}}</h6>
						</div>
					</div>
					<hr class="bg-primary">
					<div class="row">
						<div class="col-sm-6">
							<p class="font-weight-bold">Branch</p>
							<h6 class="text-muted">{{this.branch}}</h6>
						</div>
						<div class="col-sm-6">
							<p class="font-weight-bold">Email</p>
							<h6 class="text-muted">{{this.email}}</h6>
						</div>
					</div>
					<hr class="bg-primary">
					<div class="row">
						<div class="col-sm-6">
							<p class="font-weight-bold">Phone Number</p>
							<h6 class="text-muted">{{this.phone_no}}</h6>
						</div>
						<div class="col-sm-6">
							<p class="font-weight-bold">Gender</p>
							<h6 class="text-muted">{{this.gender}}</h6>
						</div>
					</div>
					<hr class="bg-primary">
					<div class="row">
						<div class="col-sm-6">
							<p class="font-weight-bold">Year</p>
							<h6 class="text-muted">{{this.year}}</h6>
						</div>
						<div class="col-sm-6">
							<p class="font-weight-bold">sem</p>
							<h6 class="text-muted">{{this.sem}}</h6>
						</div>

					</div>
					<hr class="bg-primary">
					<div class="row">
						<div class="col-sm-6">
							<button type="button" class="btn btn-primary"><a href="/updateRecord"
									style="color:black;">Update Your Records</a></button>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{{/each}}